<%= button_to '创建', {controller: 'petition', action: 'new'}, method: :get, class: 'btn btn-secondary btn-sm' %>

<style>
    .card-block {
        margin: 20px;
    }
</style>
<div class="card card-block">
  <table class="table table-striped">
    <thead class="bg-primary">
    <tr>
      <th>商家名称</th>
      <th>联系人</th>
      <th>联系人电话</th>
      <th>邮箱</th>

      <th>状态</th>

      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @petitions.each do |petition| %>
        <tr>
          <td>
            <%= link_to petition.name, controller: "petition", action: "show", id: petition.id %>
          </td>
          <td><%= petition.contact %></td>
          <td><%= petition.contact_phone %></td>
          <td><%= petition.email %></td>

          <td><%= petition.status %></td>

          <td>
            <% if petition.status != 'active' %>
            <%= form_tag customer_service_petition_path(petition), method: :put do %>
                <%= hidden_field_tag 'status', 'active'  %>
                <%= submit_tag '审核通过' %>
            <% end %>
            <%end%>
          </td>
        </tr>
    <% end%>
    </tbody>
  </table>
</div>