<%= link_to '创建', new_customer_service_petition_path, class: 'btn btn-secondary btn-sm' %>

<table class="table table-striped table-hover">
  <thead class="bg-primary">
  <tr>
    <th>商家名称</th>
    <th>联系人</th>
    <th>联系人电话</th>
    <th>邮箱</th>
    <th>状态</th>
    <th>操作</th>
  </tr>
  </thead>
  <tbody>
  <% @petitions.each do |petition| %>
      <tr>
        <td>
          <%= link_to petition.name, controller: "petition", action: "show", id: petition.id %>
        </td>
        <td><%= petition.contact %></td>
        <td><%= petition.contact_phone %></td>
        <td><%= petition.email %></td>

        <td><%= Petition::STATUS[petition.status] %></td>

        <td>
          <% if petition.status != 'passed' %>
          <%= form_tag customer_service_petition_path(petition), method: :put, style: 'float: left; margin-right: 4px' do %>
              <%= hidden_field_tag 'status', 'passed'  %>
              <%= submit_tag '审核通过', class: 'btn btn-primary btn-sm' %>
          <% end %>
          <%end%>
          <% if petition.status === 'verifying' %>
          <%= form_tag customer_service_petition_path(petition), method: :put do %>
              <%= hidden_field_tag 'status', 'rejected'  %>
              <%= submit_tag '驳回', class: 'btn btn-danger btn-sm' %>
          <% end %>
          <%end%>
        </td>
      </tr>
  <% end%>
  </tbody>
</table>
<div style='text-align: center;'><%= paginate @petitions %></div>