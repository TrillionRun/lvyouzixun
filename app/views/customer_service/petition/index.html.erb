<style>
.header-center {
  text-align:center;
}
</style>
<div class='row' style='margin-bottom: 20px;'>
  <div class='create-btn col-sm-3'>
    <%= link_to '创建', new_customer_service_petition_path, class: 'btn btn-secondary' %>
  </div>
  <div class='search_businesses'>
    <%= form_tag customer_service_petition_index_path, method: 'GET' do %>
      <div class='col-sm-4'>
        <%= text_field_tag "name", params[:name], class: 'form-control', placeholder: '按名称搜索' %>
      </div>

      <%= submit_tag '搜索', class: 'btn' %>
    <%end%>
  </div>
</div>
<div class='row'>
  <div class='col-sm-12'>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th class="header-center">商家名称</th>
        <th class="header-center">联系人</th>
        <th class="header-center">联系人电话</th>
        <th class="header-center">邮箱</th>
        <th class="header-center">状态</th>
        <th class="header-center">操作</th>
      </tr>
      </thead>
      <tbody>
      <% @petitions.each do |petition| %>
          <tr>
            <td class="header-center">
              <%= petition.name %>
            </td>
            <td class="header-center"><%= petition.contact %></td>
            <td class="header-center"><%= petition.contact_phone %></td>
            <td class="header-center"><%= petition.email %></td>

            <td class="header-center"><%= Petition::STATUS[petition.status] %></td>

            <td class="header-center">
              <%= link_to '查看', customer_service_petition_path(petition) %> |
              <%= link_to '编辑', edit_customer_service_petition_path(petition) %>
            </td>
          </tr>
      <% end%>
      </tbody>
    </table>
    <div style='text-align: center;'><%= paginate @petitions %></div>
  </div>
</div>
