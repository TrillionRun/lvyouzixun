<%= button_to '创建', {controller: 'user', action: 'new'}, method: :get, class: 'btn btn-secondary btn-sm' %>

<style>
.card-block {
  margin: 20px;
}
</style>
<div class="card card-block">
  <table class="table table-striped">
    <thead class="bg-primary">
      <tr>
        <th>姓名</th>
        <th>电话</th>
        <th>邮箱</th>
        <th>用户ID</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, controller: "user", action: "show", id: user.id %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td>
            <%= user.id %>
          </td>
          <td>
            <button type="button" class="btn btn-sm btn-outline-primary">
              <i class="fi-x" style="color: #d9534f"></i>
            </button>
          </td>
        </tr>
      <% end%>
    </tbody>
  </table>
</div>
