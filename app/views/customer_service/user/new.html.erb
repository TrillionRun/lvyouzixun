    <%= label_tag '邮箱' %>:
    <%= text_field_tag :email %><br />

    <%= label_tag '昵称' %>:
    <%= text_field_tag :nickname %><br />

    <%= label_tag '角色' %>:
    <%= text_field_tag :role %><br />

    <%= label_tag '手机号码' %>:
    <%= text_field_tag :phone %><br />

    <%= label_tag '状态' %>:
    <%= text_field_tag :status %><br />

