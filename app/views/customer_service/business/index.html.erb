<%= button_to '创建', {controller: 'business', action: 'new'}, method: :get, class: 'btn btn-secondary btn-sm' %>

<style>
    .card-block {
        margin: 20px;
    }
</style>
<div class="card card-block">
  <table class="table table-striped">
    <thead class="bg-primary">
    <tr>
      <th>名称</th>
      <th>商家ID</th>
    </tr>
    </thead>
    <tbody>
    <% @businesses.each do |business| %>
        <tr>
          <td>
            <%= link_to business.name, controller: "business", action: "show", id: business.id %>
          </td>
          <td><%= business.id %></td>
        </tr>
    <% end%>
    </tbody>
  </table>
</div>