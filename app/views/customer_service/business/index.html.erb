<%= link_to '创建', controller: "business", action: "new"%>
<br/>

<style>
    .card-block {
        margin: 20px;
    }
</style>
<div class="card card-block">
  <table class="table table-striped">
    <thead class="bg-primary">
    <tr>
      <th>商家ID</th>
      <th>名称</th>
    </tr>
    </thead>
    <tbody>
    <% @businesses.each do |business| %>
        <tr>
          <td>
            <%= link_to business.id, controller: "business", action: "show", id: business.id %>
          </td>
          <td><%= business.name %></td>
        </tr>
    <% end%>
    </tbody>
  </table>
</div>