
<div class="form-group row">
  <%= f.label '用户ID', class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
        <%= f.select :user_id, User.all.collect { |u| [ u.name, u.id ] }, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label '商家ID', class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
        <%= f.select :business_id, Business.all.collect { |bu| [ bu.name, bu.id ] }, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label '日期', class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
        <%= f.date_field :date, value: @appointment.date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label '状态', class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
        <%= f.text_field :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label '预约人', class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label '手机号码', class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
        <%= f.text_field :phone, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label '备注', class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10"> 
        <%= f.submit '保存', class: "btn btn-primary" %>
    </div>
  </div>