<div class="row">
  <div class="col-md-2" style='height: 450px; width: 160px; overflow-y: scroll;'>
    <ul class="nav nav-sidebar nav-pills nav-stacked ">
        <% @users.each do |u| %>
            <li class="nav-item" data-uid="<%= u.id %>">
              <%=u.name%>
            </li>
        <%end%>
    </ul>
  </div>
  <div class="col-md-10">
    <div class='messages'>
      <ul class='message'></ul>
    </div>
    <form>
        <input type='text' data-behavior='room_speaker' style='width:600px;' class="form-control" placeholder='回复：'>
    </form>
  </div>
</div>
<script>
    $(document).ready(function(){
        $(".messages").scrollTop($(".messages")[0].scrollHeight);
    });
    $(function () {  
        $('ul.nav li').each(function () {  
            $(this).click(function(){
              $.get(
                  "<%= messages_customer_service_business_chats_path(params[:business_id])  %>",
                  {user_id: $(this).data('uid')},
                  function(data){
                    $('ul.message').empty();
                      $.each(data, function(index,item){
                          $('ul.message').append("<li>"+ item.content +"</li>")
                      })
                  }
              );
        });  
    });
    });
</script>
